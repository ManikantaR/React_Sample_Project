{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "mocha": true
  },
  "rules": {
    "quotes": 0,
    "no-console": 1,
    "no-debugger": 1,
    "no-var": 1,
    "semi": [1, "always"],
    "no-trailing-spaces": 0,
    "eol-last": 0,
    "no-unused-vars": 0,
    "no-underscore-dangle": 0,
    "no-alert": 0,
    "no-lone-blocks": 0,
    "jsx-quotes": 1,  // Always use double quotes(") for JSX attributes but single quotes for all other JS
    "jsx-a11y/img-has-alt": 1,  //always include an alt porp on <img>
    "jsx-a11y/img-redundant-alt": 1,  //do not use works like photo, image and picture in  <img> alt props
    "jsx-a11y/aria-role": 1,  //use only valid, non-abstract
    "jsx-a11y/no-access-key": 1,  //do not use accesskey on elements
    "react/no-string-refs": 0,  //Always use ref callbacks
    "react/no-is-mounted": 1,   //Do not use isMounted
    "react/require-render-return": 1,   //return a value in RENDER methods
    "react/display-name": [ 1, {"ignoreTranspilerName": false }],
    "react/forbid-prop-types": [1, {"forbid": ["any"]}],
    "react/jsx-boolean-value": 1,   // Omit the value of the prop when it is explicitly TRUE
    "react/jsx-closing-bracket-location": 1,  // Proper alignment styles for JSX syntax
    "react/jsx-curly-spacing": 1,   //Do not pad JSX curly braces with spaces
    "react/jsx-indent-props": 0,
    "react/jsx-key": 1,
    "react/jsx-max-props-per-line": 0,
    "react/jsx-no-bind": [1, {
      "ignoreRefs": true,
      "allowArrowFunctions": false,
      "allowBind": false
    }], //Bind event handlers for the render method in the constructor
    "react/jsx-no-duplicate-props": 1,
    "react/jsx-no-literals": 0,
    "react/jsx-no-undef": 1,
    "react/jsx-pascal-case": 1, // Use PascalCase for filenames
    "react/jsx-sort-prop-types": 0,
    "react/jsx-sort-props": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-danger": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-direct-mutation-state": 1,
    "react/no-multi-comp": 1,
    "react/no-set-state": 0,
    "react/no-unknown-property": 1,
    "react/prefer-es6-class": 1,
    "react/prefer-stateless-function": 0,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 1,
    "react/require-extension": 1,
    "react/self-closing-comp": 1,   //Always self-close tags that have no children
    "react/sort-comp": 1,
    "react/wrap-multilines": 1  //Wrap JSX tags in parenthesis when they span more than one line
  }
}
